doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/anime.css")
        link(rel="stylesheet", href="/css/comments.css")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css")
        title= anime.name
    body
       .container
        button(onclick="history.back()").btn.btn-dark.my-3 |
            i.bi.bi-arrow-left Regresar
        .row
          .col-6
            img.anime-card(src=anime.image_url, alt=anime.name)
          .col-6
            .card
                .card-body
                    h1.card-title= anime.name 
                    h6.card-subtitle.mb-2.text-muted Anime
                    p.card-text=anime.description
                    each category in anime.categories
                      ul 
                        li=category 
                    if anime.is_in_emision 
                        span.badge.text-bg-success En emision
                    else 
                        span.badge.text-bg-danger Finalizado
                    p.fw-bold.mt-2 Temporadas: #{anime.seasons }
                    
                    -const stars=anime.stars 
                    -let counter = 0
                    while stars >= counter 
                      li.stars.bi.bi-star-fill 
                      - counter++
                    span.m-2 #{anime.stars}/10

                    p.fw-bold.mt-2 AÃ±o de lanzamiento: 
                     | #{anime.realeased_year}

        include ../mixins/comments
        include ../mixins/footer
        +comments 
        +footer 
            
